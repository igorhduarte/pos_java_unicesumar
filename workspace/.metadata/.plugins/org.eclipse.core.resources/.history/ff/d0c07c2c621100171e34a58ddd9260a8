import javax.swing.JOptionPane;

public class Calculadora {
	
	
	public static void main(String[] args) {
		String valor = "0";
		while(valor != null){
			valor = JOptionPane.showInputDialog("Insira um valor");
			JOptionPane.showMessageDialog(null, verificaPar(Integer.valueOf(valor)) ? "Número Par" : "Número Ímpar");	
		}
			
	}
	
	
	public static boolean verificaPar(Integer valor){
				
		return (valor % 2) == 0;	
			
	}	

}
